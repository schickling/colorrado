{
  "name": "kolorful",
  "private": true,
  "description": "Beautiful color gradients based on images",
  "license": "MIT",
  "scripts": {
    "dev": "remix build && run-p dev:*",
    "dev:css": "tailwindcss -w -i ./public/tailwind.css -o app/styles.css",
    "dev:remix": "remix watch",
    "dev:wrangler": "BROWSER=none NODE_ENV=development wrangler pages dev ./public",
    "postinstall": "remix setup cloudflare-pages",
    "build": "run-s build:* && remix build",
    "build:css": "tailwindcss -m -i ./public/tailwind.css -o app/styles.css"
  },
  "dependencies": {
    "@remix-run/cloudflare-pages": "1.3.2",
    "@remix-run/react": "1.3.2",
    "classnames": "2.3.1",
    "color.js": "1.2.0",
    "colorthief": "2.3.2",
    "node-vibrant": "3.2.1-alpha.1",
    "react": "17.0.2",
    "react-colorful": "5.5.1",
    "react-dom": "17.0.2",
    "remix": "1.3.2"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "3.4.0",
    "@remix-run/dev": "1.3.2",
    "@remix-run/eslint-config": "1.3.2",
    "@types/react": "17.0.41",
    "@types/react-dom": "17.0.14",
    "autoprefixer": "10.4.4",
    "eslint": "8.11.0",
    "npm-run-all": "4.1.5",
    "postcss": "8.4.12",
    "prettier": "2.6.0",
    "tailwindcss": "3.0.23",
    "typescript": "4.6.2",
    "wrangler": "beta"
  }
}
